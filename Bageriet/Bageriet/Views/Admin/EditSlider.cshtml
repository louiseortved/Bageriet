
@{
    ViewBag.Title = "EditSlider";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}



<div id="page-content">
    <div class="content-header">
        <ul class="breadcrumb breadcrumb-top">
            <li>SliderList</li>
            <li>Edit SliderImage</li>

        </ul>

        <ul class="nav-horizontal text-center">
            <li>
                <a href="/Admin/SliderList"><i class="icon-picture"></i> Slider</a>
            </li>
            <li>
                <a href="/Admin/SliderCreate"><i class="icon-pencil"></i> Create Slider</a>
            </li>
            <li>
                <a href="/Admin/EditSlider"><i class="icon-wrench"></i> Edit Slider</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="block block-fixed-height">
                <div class="block-title">
                    <h2><i class="icon-pencil"></i> <strong>Edit</strong> Slider</h2>
                </div>



                <form action="/Admin/EditSlider" method="post" id="sliderEdit" enctype="multipart/form-data">

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="form-group">
                        <label class="col-md-3 control-label" for="file">Image</label>
                        <div class="col-md-8">
                            <input id="file" type="file" name="file" class="form-control" placeholder="Upload et nyt billede" required />
                        </div>
                    </div>

                    <div class="form-group form-actions">
                        <div class="col-md-4 col-md-offset-10">
                            <button type="submit" class="btn btn-default btn-md btn-slider"><i class="icon-plus"></i> Save</button>
                            <a href="@Url.Action("SliderList")" type="reset" class="btn btn-default">Cancel</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
