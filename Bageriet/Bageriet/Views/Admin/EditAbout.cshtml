@model Bageriet.Models.About
@{
    ViewBag.Title = "EditAbout";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}

<div id="page-content">
    <div class="content-header">

        <ul class="breadcrumb breadcrumb-top">
            <li>About</li>
            <li>Edit About</li>

        </ul>

        <ul class="nav-horizontal text-center">
            <li>
                <a href="/Admin/AboutList"><i class="icon-bag"></i> About us</a>
            </li>
            <li>
                <a href="/Admin/CreateAbout"><i class="icon-pencil"></i> Add new Content</a>
            </li>
            <li class="active">
                <a href="/Admin/Editabout"><i class="icon-wrench"></i> Edit Content</a>
            </li>
        </ul>
    </div>
    
    
    <div class="block block-alt-noborder">
        <h3 class="sub-header">@Model.Title </h3>
        <form role="form" action="/Admin/EditAbout"  id="AboutEdit" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label class="control-label" for="Title">Title</label>
                <input type="text" value="@Model.Title" class="form-control" name="Title" placeholder="Edit Title" required="">
            </div>
            
            <div class="form-group">
                <label class="control-label" for="Description">Description</label>
                <input type="text" value="@Model.Description" class="form-control" name="Description" placeholder="Edit description" required="">
            </div>
          

            <button type="submit" class="btn btn-default">Gem</button>
            <a href="@Url.Action("AboutList")" type="reset" class="btn btn-default">Cancel</a>
        </form>
    </div>
    

</div>

