@model Bageriet.Models.ApplicationUser


<h4>Add ProfilePicture</h4>
<div class="col-md-12 padding-top-editUser">

    <form action="@Url.Action("EditProfilePicture")" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(Model => Model.Id)
        @{
            if (Model.Email == HttpContext.Current.User.Identity.Name)
            {
                <div class="form-group">
                   
                    <div class="col-md-9 col-md-offset-1">
                        <img src="@Html.Raw(Model.ImageUrl == null? "/Content/Styles/Images/avatar-admin-copy_medium.png": "/Uploads/Users/" + Model.ImageUrl)" alt="@Model.UserName" class="ímg-responsive" style="width: 25%; height: auto;">

                        <input id="image" type="file" name="file" class="form-control" required="" />
                    </div>
                </div>

            }
        }



        <div class="panel-footer bg-none">
            <div class="row">
                <div class="col-md-9 col-md-offset-1">
                    <button type="submit" class="btn btn-default">Submit</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </div>
            </div>
        </div>
    </form>

</div>