@model Bageriet.Models.News
@{
    ViewBag.Title = "CreateNews";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}



<div id="page-content">
    <div class="content-header">

        <ul class="breadcrumb breadcrumb-top">
            <li>News</li>
            <li>Add News</li>

        </ul>
        <ul class="nav-horizontal text-center">


            <li>
                <a href="/Admin/NewsList"><i class="icon-bag"></i> News</a>
            </li>
            <li>
                <a href="/Admin/CreateNews"><i class="icon-pencil"></i> Create News</a>
            </li>


        </ul>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="block-title">
                    <h2><i class="fa fa-pencil"></i><strong>General</strong> Data</h2>
                </div>

                <form role="form" action="/Admin/CreateNews" id="BlogCreate" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered">

                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Titel">Title</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="Title" placeholder="Write a title" required>
                        </div>
                    </div>
                    


                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Content">Content</label>
                        <div class="col-md-8">
                            <textarea type="text" class="form-control" name="Content" placeholder="Content" required></textarea>
                        </div>
                    </div>

              
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="image">Image</label>
                        <div class="col-md-8">
                            <input id="image" type="file" name="file" class="form-control" required />
                        </div>
                    </div>


                   

                    <div class="form-group form-actions">
                        <div class="col-md-9 col-md-offset-3">
                            <button type="submit" class="btn btn-sm btn-default"><i class="fa fa-floppy-o"></i> Save</button>
                            <a href="@Url.Action("NewsList")" type="reset" class="btn btn-sm btn-default"><i class="fa fa-repeat"></i> Cancel</a>


                        </div>
                    </div>


                </form>


            </div>
        </div>



    </div>
</div>