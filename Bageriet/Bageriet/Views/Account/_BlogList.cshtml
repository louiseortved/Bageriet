
@model Bageriet.ViewModels.BlogVM





    
 
  
        <div class="col-md-12 col-sm-12 col-xs-12 padding-right-0">
            <div class="x_panel border_box">
                <div class="x_title">
                    <h4>Recent Blogs</h4>

                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <ul class="simple-post-list">

                        @foreach (var item in Model.BlogList)
                        {
                            <li>
                                <div class="post-image pull-left">
                                    <div class="img-thumbnail">
                                        <a href="/Admin/BlogDetail/@item.Id">

                                            <img src="/Uploads/@item.ImageUrl" alt="@item.Title" />
                                        </a>
                                    </div>
                                </div>
                                <div class="post-info">
                                    <a href="/Admin/BlogDetail/@item.Id"><strong>@(item.Title.Length > 35 ? item.Title.Substring(0, 35) : item.Title)</strong></a>
                                    <div class="post-meta">
                                        @item.DateCreated.ToString("M"), @item.DateCreated.ToString("yyyy")
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>

   


  


