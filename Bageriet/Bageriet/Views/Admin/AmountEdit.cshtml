@model Bageriet.Models.Amount
@{
    ViewBag.Title = "ingredientsEdit";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}

<div id="page-content">

    <ul class="breadcrumb breadcrumb-top">
        <li>Amounts</li>
        <li>Edit Amounts</li>

    </ul>

    <ul class="nav-horizontal text-center">
        <li>
            <a href="/Admin/AmountList"><i class="icon-bag"></i> Amounts</a>
        </li>
        <li>
            <a href="/Admin/AmountCreate"><i class="icon-pencil"></i> Create Amount</a>
        </li>
        <li>
            <a href="/Admin/AmountEdit"><i class="icon-wrench"></i> Edit Amount</a>
        </li>
    </ul>



    <div class="block block-alt-noborder">
        <h3 class="sub-header">@Model.Title </h3>
        <form role="form" action="/Admin/AmountEdit" id="AmountEdit" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label class="control-label" for="Title">Title</label>
                <input type="text" value="@Model.Title" class="form-control" name="Title" placeholder="Edit Title" required="">
            </div>

            <button type="submit" class="btn btn-default">Gem</button>
            <a href="@Url.Action("AmountList")" type="reset" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>



