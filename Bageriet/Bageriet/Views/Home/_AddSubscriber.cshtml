@model Bageriet.Models.Subscriber


<form role="form" action="/Home/AddSubscriber" method="post" id="SignUp">
    <div class="col-md-9 col-md-push-2 col-sm-12 col-xs-12 commentBox_2">
        <div class="input-group">
            <span class="input-group-addon"><i class="icon-pencil"></i></span>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email (fortæl os hvad du synes)..">
        </div>
    </div>
    <div class="col-lg-2 col-lg-push-1 col-md-1 col-md-push-1 col-sm-1 col-sm-push-1 col-xs-12 col-xs-push-3">
        <div class="input-group-btn">
            <button type="submit" class="btn btn-default btn-comment ">Tilmeld</button>
        </div>
    </div>


</form>











