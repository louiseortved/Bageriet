
@{
    ViewBag.Title = "AmountCreate";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}




<div id="page-content">
    <div class="content-header">

        <ul class="breadcrumb breadcrumb-top">
            <li>AmountList</li>
            <li>Add new Amount</li>

        </ul>

        <ul class="nav-horizontal text-center">
            <li>
                <a href="/Admin/AmountList"><i class="icon-bag"></i> Amount</a>
            </li>
            <li>
                <a href="/Admin/AmountCreate"><i class="icon-pencil"></i> Create Amount</a>
            </li>
        </ul>



    </div>
    <div class="block block-alt-noborder">

        <form role="form" action="/Admin/AmountCreate" id="ingredientsCreate" method="post">

            <div class="form-group">
                <label class="control-label" for="Title">Title</label>
                <input type="text" class="form-control" name="Title" placeholder="Add Title" required="">
            </div>

            <button type="submit" class="btn btn-default">Save</button>
            <a href="@Url.Action("AmountList")" type="reset" class="btn btn-default">Cancel</a>

        </form>
    </div>
</div>








