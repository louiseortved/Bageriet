
@model Bageriet.Models.Category
@{
    ViewBag.Title = "CategoryEdit";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}


<div id="page-content">
    <div class="content-header">
        <ul class="breadcrumb breadcrumb-top">
            <li>Category</li>
            <li>CategoryList</li>
            <li>Edit a Category</li>

        </ul>

        <ul class="nav-horizontal text-center">
            <li>
                <a href="/Admin/CategoryList"><i class="icon-bag"></i> Categories</a>
            </li>
            <li>
                <a href="/Admin/CategoryCreate"><i class="icon-pencil"></i> Create Category</a>
            </li>
            <li>
                <a href="/Admin/CategoryEdit"><i class="icon-wrench"></i> Edit Category</a>
            </li>

        </ul>
    </div>
    <div class="block block-alt-noborder">
        <h3 class="sub-header">@Model.Title <small>Edit Category</small></h3>
        <form role="form" action="/Admin/CategoryEdit" id="categoryEdit" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label class="control-label" for="Title">Title</label>
                <input type="text" value="@Model.Title" class="form-control" name="Title" placeholder="Edit Title" required="">
            </div>

            <button type="submit" class="btn btn-default">Save</button>
            <a href="@Url.Action("CategoryList")" type="reset" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>

