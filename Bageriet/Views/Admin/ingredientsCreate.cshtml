
@{
    ViewBag.Title = "ingredientsCreate";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}

<div id="page-content">
    <div class="content-header">

        <ul class="breadcrumb breadcrumb-top">
            <li>IngredientsList</li>
            <li>Add new ingredients</li>

        </ul>

        <ul class="nav-horizontal text-center">
            <li>
                <a href="/Admin/ingredientsList"><i class="icon-bag"></i> Ingredients</a>
            </li>
            <li>
                <a href="/Admin/ingredientsCreate"><i class="icon-pencil"></i> Create Ingredients</a>
            </li>
        </ul>



    </div>
    <div class="block block-alt-noborder">

        <form role="form" action="/Admin/ingredientsCreate" id="ingredientsCreate" method="post">

            <div class="form-group">
                <label class="control-label" for="Name">Name</label>
                <input type="text" class="form-control" name="Name" placeholder="Add Name" required="">
            </div>

            <button type="submit" class="btn btn-default">Save</button>
            <a href="@Url.Action("ingredientsList")" type="reset" class="btn btn-default">Cancel</a>

        </form>
    </div>
</div>






