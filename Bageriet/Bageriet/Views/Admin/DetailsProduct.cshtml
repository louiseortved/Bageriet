@model Bageriet.ViewModels.IngredientVM


@{
    ViewBag.Title = "DetailsProduct";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}

<div id="page-content">
    <div class="content-header">

        <ul class="breadcrumb breadcrumb-top">
            <li>ProductList</li>
            <li>Details Product</li>
            <li>Pick ingrediensen to a product</li>

        </ul>


        <ul class="nav-horizontal text-center">
            <li>
                <a href="/Admin/ProductList"><i class="icon-bag"></i> Products</a>
            </li>
            <li>
                <a href="/Admin/ProductCreate"><i class="icon-pencil"></i> Create Product</a>
            </li>
            <li>
                <a href="/Admin/Productedit"><i class="icon-wrench"></i> Edit Product</a>
            </li>
        </ul>
    </div>




    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="block-title">

                    <h5><strong>Add Ingredients</strong></h5>
                    <form action="/Admin/_AddIngredients" method="post" class="form-horizontal form-bordered" id="">


                        <input type="hidden" name="ProductId" value="@Model.Product.Id" />

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="Name">Name</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="Name" placeholder="Add Name" required="">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="Amount">Amount</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="Amount" placeholder="Add Amount" required="">
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-11">
                                <input type="submit" value="Save" class="btn btn-default btn-md pull-right" />
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-title" style="min-height: 400px; padding:60px;">
                    <div class="col-md-9 col-md-push-2 ">
                        <table class="table table-striped">

                            <thead>
                                <tr>
                               
                                    <th>Ingrediens</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            @{


                                foreach (var item in Model.Product.Ingredients)
                                {
                                    <tbody>
                                        <tr>
                                            <td> @item.Amount @item.Name </td>
                                       
                                            <td class="float-right">

                                                                      
                                                <a class="btn btn-default" href="@Url.Action("IngredientsDelete", new {id = item.Id})" aria-label="Settings">
                                                    <i class="icon-trash" aria-hidden="true"></i>
                                                </a>

                                                <a class="btn btn-default" href="@Url.Action("IngredientsEdit", new {id = item.Id})" aria-label="Settings">
                                                        <i class="icon-wrench" aria-hidden="true"></i>
                                                    </a>
                                              
                                            </td>
                                        </tr>
                                    </tbody>
                                }


                            }


                        </table>








                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
