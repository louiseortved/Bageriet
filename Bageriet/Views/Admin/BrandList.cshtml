@model IEnumerable<Bageriet.Models.Brand>

@{
    ViewBag.Title = "BrandList";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}

<div id="page-content">
    <div class="content-header">
        <ul class="breadcrumb breadcrumb-top">
            <li>Brand</li>
            <li>BrandList</li>
        </ul>
        <ul class="nav-horizontal text-center">
            <li>
                <a href="/Admin/BrandList"><i class="icon-bag"></i> Brands</a>
            </li>
            <li>
                <a href="/Admin/BrandCreate"><i class="icon-pencil"></i> Create Brand</a>
            </li>
        </ul>
    </div>
    <div class="block block-alt-noborder">
        <a class="btn-top btn btn-default pull-right" style="margin-right: 15px;" href="/admin/BrandCreate"> <span class="fa fa-plus"></span> Create New</a>
        <h3 class="sub-header">
        Brands
        </h3>

        <table class="table table-striped">

            <thead>
            <tr>
                <th>BrandImage</th>
                <th>Title</th>
                <th class="text-right">Actions</th>
            </tr>
            </thead>

            <tbody>

                @foreach (var brand in Model)
            {
                    <tr>
                  
                        <td class="text-center">
                            @if (brand.ImageUrl.Length > 0)
                            {
                                <img class="img-responsive" style="width: 148px; height: auto" src="~/Uploads/@brand.ImageUrl" alt=@brand.Title />

                            }
                            else
                            {
                                <img class="img-responsive" style="height: 75px; width: auto" src="~/Content/Styles/Images/noImage.png" />

                            }

                        </td>
                        <td >@brand.Title</td>

                        <td class="text-right" >
                            <a class="btn btn-default" href="/admin/BrandDelete/@brand.Id" aria-label="Settings">
                                <i class="icon-trash" aria-hidden="true"></i>
                                Delete
                            </a>
                      
                            <a class="btn btn-default" href="@Url.Action("BrandEdit", new {id = brand.Id})" aria-label="Settings">
                                <i class="icon-wrench" aria-hidden="true"></i>
                                Edit
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
