@model Bageriet.Models.About
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}



<div id="page-content">
    <div class="content-header">
     

            <ul class="breadcrumb breadcrumb-top">
                <li>About Us</li>
                <li>Create About</li>
      

            </ul>
            <ul class="nav-horizontal text-center">


                <li>
                    <a href="/Admin/AboutList"><i class="icon-users"></i> About Us</a>
                </li>
                <li>
                    <a href="/Admin/CreateAbout"><i class="icon-pencil"></i> Add new Content</a>
                </li>


            </ul>
      
  
     
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="block-title">
                    <h2><i class="icon-pencil"></i> <strong>Add</strong> Content (About)</h2>
                </div>

                <form role="form" action="/Admin/CreateAbout" id="contentCreate" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered">


                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Titel">Titel</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="Title" placeholder="Title" required>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Description">Description</label>
                        <div class="col-md-8">
                            <textarea type="text" class="form-control" name="Description" placeholder="Description" required></textarea>
                        </div>
                    </div>



                    <div class="form-group form-actions">
                        <div class="col-md-9 col-md-offset-3">
                            <button type="submit" class="btn btn-md btn-default"><i class="fa fa-floppy-o"></i> Gem</button>
                            <a href="@Url.Action("AboutList")" type="reset" class="btn btn-md btn-default"><i class="fa fa-repeat"></i> Fortryd</a>


                        </div>
                    </div>


                </form>


            </div>
        </div>
    </div>





</div>






