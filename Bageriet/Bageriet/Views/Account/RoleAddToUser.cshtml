
@{
    ViewBag.Title = "RoleAddToUser";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}

<div id="page-content">
    <div class="content-header">
    <ul class="breadcrumb breadcrumb-top">
        <li>Roles</li>
        <li>Add Role to User</li>
     
    </ul>
        <div class="content-header-media" style="margin-top: -20px;">
            <div class="header-section" style="background: rgba(0, 0, 0, 0.69);">
                <div class="row">
                    <div class="col-md-4 col-lg-6 hidden-xs hidden-sm">
                        <h1> Add Role to a specific user</h1>
                    </div>
                </div>
            </div>

            <img src="/Content/Styles/Images/ian-schneider-66374.png" alt="Alternate Text" />
        </div>
</div>
    <div class="block block-alt-noborder" style="min-height: 300px">
      

        <form role="form" action="/Account/RoleAddToUsers" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered">

            <div class="form-group">
                <label class="col-md-3 control-label" for="UserId">Brugernavn</label>
                <div class="col-md-8">
                    @Html.DropDownList("UserId", (IEnumerable<SelectListItem>)ViewBag.Users,
                    "Select user", new { @class = "form-control" })
                </div>
            </div>



            <div class="form-group">
                <label class="col-md-3 control-label" for="RoleName">Rollenavn</label>
                <div class="col-md-8">
                    @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles,
                        "Select role", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-11">
                    <input type="submit" value="Save" class="btn btn-default btn-md pull-right" />
                </div>
            </div>

        </form>
    </div>
</div>