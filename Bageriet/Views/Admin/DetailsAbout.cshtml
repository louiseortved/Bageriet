@model Bageriet.Models.About
@{
    ViewBag.Title = "DetailsAbout";
    Layout = "~/Views/Shared/_LayoutPageBackend.cshtml";
}


<div id="page-content">
    <div class="content-header">
        <ul class="breadcrumb breadcrumb-top">
            <li>About</li>
            <li>AboutList</li>
            <li>DetailsAbout</li>
        </ul>
        <div class="content-header-media" style="margin-top: -20px;">
            <div class="header-section" style="background: rgba(0, 0, 0, 0.69);">
                <div class="row">
                    <div class="col-md-4 col-lg-6 hidden-xs hidden-sm">
                        <h1>About</h1>
                    </div>
                </div>
            </div>

            <img src="/Content/Styles/Images/ian-schneider-66374.png" alt="Alternate Text" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">@Model.Title</h1>
            <hr style=" border-bottom: #ddd solid 1px;">
            <div class="col-md-12">
                <p>@Model.Description</p>
            </div>

        </div>
   
    </div>
</div>
