@model Bageriet.Models.Ingredient



<form action="/Admin/_AddIngredients" method="post" class="form-horizontal form-bordered" id="">
    <input type="hidden" name="ProductId" value="@Model.Id" />



    <div class="form-group">
        <label class="col-md-3 control-label" for="name">Name</label>
        <div class="col-md-8">
            <input type="text" value="@Model.Name" class="form-control" name="name" placeholder="Add Name" required="">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label" for="Amount">Amount</label>
        <div class="col-md-8">
            <input type="text" value="@Model.Amount" class="form-control" name="Amount" placeholder="Add Amount" required="">
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-11">
            <input type="submit" value="Save" class="btn btn-default btn-md pull-right" />
        </div>
    </div>

</form>